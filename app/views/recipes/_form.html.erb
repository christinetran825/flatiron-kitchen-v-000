<% form_for recipe do |f|  %>
  <div class="field">
    <%=f.label :name, 'Name:' %>
    <%=f.text_field :name %>
    <br>
    <% if !ingredients.blank? %>
      <%= f.label :ingredients, 'Ingredients:' %><br>
      <%= f.collection_check_boxes :ingredient_id, Ingredient.all, :id, :name %>
    <% end %>
  </div>

  <%= f.submit  %>
<% end %>
